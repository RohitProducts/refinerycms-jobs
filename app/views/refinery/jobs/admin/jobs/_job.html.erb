<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(job) -%>">
  <span class='title'>
    <%= job.reference %>, starts <%= job.start.strftime('%d/%m/%Y') %> in <%= job.category.name %>
    (<%= job.job_applications.size %> applications)
    <br><%= job.title %>
    (<%= salary_benefits(job) -%>)

  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("page_copy.png"), refinery.jobs_admin_job_job_applications_path(job),
        :title => t('.view_applications') %>

    <%= link_to refinery_icon_tag("application_go.png"), refinery.jobs_job_path(job),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_jobs_admin_job_path(job),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.jobs_admin_job_path(job),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => job.reference),
        :method => :delete %>
  </span>
</li>
